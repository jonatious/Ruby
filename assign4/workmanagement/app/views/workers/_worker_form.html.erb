<center>
	<h3>New Worker</h3>

<%= form_for @worker, :remote => true, :html => {id: 'workerform'} do |form| %>
	<table border="2px" style="width:25%" class="table table-striped">
		<tr>
			<td>First Name</td>
			<td><%= form.text_field :first_name, class: 'form-control' %></td>
		</tr>
		<tr>
			<td>Last Name</td>
			<td><%= form.text_field :last_name, class: 'form-control' %></td>
		</tr>
		<tr>
			<td colspan="2" align="center"><%= form.submit('Create') %></td>
		</tr>
	</table>
<% end %>
</center>