<form action="search_items" data-remote="true">
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
	<center>
		<h3>Search</h3>
		<table border="2px" style="width:70%" class="table table-striped">
			<tr>
				<td>Name</td>
				<td><input type="text" name="name" class="form-control"></td>
			</tr>
			<tr>
				<td>Description</td>
				<td><input type="text" name="desc" class="form-control"></td>
			</tr>
			
			<tr>
				<td colspan="2" align="center"><input type="submit" class="btn btn-primary" value="Search"></td>
			</tr>
		</table>
	</center>
</form>